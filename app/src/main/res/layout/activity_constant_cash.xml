<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ConstantCashActivity"
    android:fitsSystemWindows="true"
    android:background="#ededed">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    <include
        layout="@layout/app_bar_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/widokoplat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0b5225"
        android:gravity="center"
        android:text="Opłać wydatki stałe"
        android:textColor="@android:color/white"
        android:textSize="35sp"
        android:textStyle="bold|normal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="500dp"/>
    </LinearLayout>
        <Button
            android:id="@+id/oplacwszystko"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OPŁAĆ WSZYSTKO" />
        <Button
            android:id="@+id/pomin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="POMIŃ" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>