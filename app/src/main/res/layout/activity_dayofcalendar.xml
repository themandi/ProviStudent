<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DayofcalendarActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">
        <include
            layout="@layout/app_bar_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/widokoplat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0b5225"
            android:gravity="center"
            android:text="Dzień z kalendarza"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold|normal"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data:"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textStyle="bold|normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/jakidzien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Data"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    android:textStyle="bold|normal" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                tools:ignore="MissingConstraints" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/dochodaktualny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dochód aktualny: 123zł"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textStyle="bold|normal"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="200dp"
                tools:layout_editor_absoluteY="90dp" />
            <TextView
                android:id="@+id/kwotadowydania"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Sugerowany wydatek na dziś: 20zł"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:layout_gravity="center"
                android:textStyle="bold|normal" />
            <TextView
                android:id="@+id/wydanokwota"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Wydano: 20zł"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:textStyle="bold|normal" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/przekroczono"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Przekroczono o: 20zł"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    android:textStyle="bold|normal" />
                <TextView
                    android:id="@+id/wydanocheatday"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Wydano z cheatday:"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    android:textStyle="bold|normal" />
            </LinearLayout>
        </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="250dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/cofnij"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COFNIJ" />
        <View
            android:layout_width="5mm"
            android:layout_height="1dp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/edytujwydatki"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edytuj wydatki" />
        <View
            android:layout_width="5mm"
            android:layout_height="1dp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/zapisz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/zapisz" />
        <View
            android:layout_width="5mm"
            android:layout_height="1dp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/cheatday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CHEAT DAY" />
    </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>